<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/selecttema"
    android:background="@drawable/background_lamps00">


    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/tittle_select_a_topic"
        android:id="@+id/title_temas"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_height="190dp" />


    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/voltar"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/seta_voltar" />
    <!-- opções !-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objects"
        android:id="@+id/objetos"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals"
        android:id="@+id/animais"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginTop="251dp"
        android:layout_alignStart="@+id/objetos" />


</RelativeLayout>
