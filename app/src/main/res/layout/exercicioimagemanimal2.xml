<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/exercicioanimalimagem2"
    tools:context="aplicativoIdiomas.View.ExercicioAnimalImagem2"
    android:background="@drawable/background_qst">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_desiste"
        android:id="@+id/desiste"
        android:onClick="retornaMain"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_notification_overlay"/>

    <!-- Timer-->
    <TextView
        android:id="@+id/tvCountDownTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#f8fbfb"
        android:gravity="center"
        android:text="@string/time" />

    <!-- Enunciado da questão !-->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/horse"
        android:id="@+id/questaoimg2"
        android:layout_below="@+id/desiste"
        android:layout_centerHorizontal="true" />

    <!-- botões alternativas !-->
    <Button
        android:text="@string/dog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnalternativa1"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_above="@+id/btnalternativa2"
        android:layout_alignStart="@+id/btnalternativa2" />

    <Button
        android:text="@string/horse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnalternativa2"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_above="@+id/btnalternativa3"
        android:layout_alignStart="@+id/btnalternativa3" />

    <Button
        android:text="@string/cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnalternativa3"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_above="@+id/btnalternativa4"
        android:layout_alignStart="@+id/btnalternativa4" />

    <Button
        android:text="@string/monkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnalternativa4"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />


</RelativeLayout>
